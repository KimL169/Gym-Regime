$ ->
  $("#bodylogs_chart").highcharts "StockChart",
    chart:
      zoomType: "xy"
      width: 800


    title:
      text: "Weight and Caloric intake over time"

    xAxis: [

      type: 'datetime'
      data: gon.created_at

      ]
    yAxis: [ # Primary yAxis
      labels:
        format: "{value} Kg"
        style:
          color: "#FF7400"

      title:
        text: "Weight"
        style:
          color: "#FF7400"
    ,
      # Secondary yAxis
      title:
        text: "Calories"
        style:
          color: "#403F40"

      labels:
        format: "{value} kcal"
        style:
          color: "#403F40"

      opposite: true
    ]
    tooltip:
      shared: true

    legend:
      layout: "vertical"
      align: "left"
      x: 100
      verticalAlign: "top"
      y: 70
      floating: true
      backgroundColor: "#FFFFFF"

    series: [
      name: "Calories"
      color: "#403F40"
      type: "column"
      yAxis: 1
      pointInterval: <%= 1.day * 1000 %>
      pointStart: gon.days_ago
      data: gon.kcal
      tooltip:
        valueSuffix: "Kcal"
    ,
      name: "Weight"
      color: "#FF7400"
      type: "spline"
      pointInterval: <%= 1.day * 1000 %>
      pointStart: gon.days_ago
      data: gon.weight

      tooltip:
        valueSuffix: "Kg"
    ]

