<%  provide(:title, "Edit user") %>
<h1>Update your account</h1>

<br>
<div class="row">
	<div class="large-12">
		<div class="form">
		<%= simple_form_for @user do |f| %>
			<%= f.input :name %>
			<%= f.input :email %>
			<%= f.input :password %>
			<%= f.input :password_confirmation %>
			<%= f.button :submit, "Submit changes" %>
		<% end %>
		</div>
	</div>
</div>