<% provide(:title, 'Body Stat') %>

<h1>Body Stat</h1>
<br>


<div class="row">
	<% if @bodylogscount < 3 %>
		<div class="large-8 medium-8 medium-centered large-centered columns">
			<div class="panel">
				<h3>Information</h3>
				<p>
					If you don't know your caloric intake or weight at
					this time you can always come back and edit the 
					results table to fill it in later.
					(If you for example weigh yourself in the morning and
					want to fill in your daily calories in the evening).
				</p>
			</div>
		</div>
	<% end %>

	<div class="large-4 medium-4 small-10 medium-centered small-centered large-centered columns">
		<%= simple_form_for @bodylog do |l| %>
			<%= l.input :created_at, as: :date, :input_html => {:maxlength =>2,:style=> 'width: 90px'}, label: "Date" %> 
			<%= l.input :weight %>
			<%= l.input :bodyfat %>
			<%= l.input :kcal %>
			<%= l.button :submit, 'Enter Stat' %>
		<% end %>
	</div>
</div>