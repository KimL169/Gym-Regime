<header>
<div class="fixed">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <%= link_to 'WorkoutBook', root_path, id: "logo" %>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">

      <!-- Right Nav Section -->
      <ul class="right">
        <% if signed_in? %>
        <li class="divider"></li>
        <li><%= link_to "Workout Log", '/workoutlog' %></li>
        <li class="divider"></li>
        <li><%= link_to "Body Log", '/bodylogs/new' %></li>
        <li class="divider"></li>
        <li><%=  link_to "Tools", '/tools' %></li>
        <li class="divider"></li>
        <% else %>
        <li><%= link_to "Sign Up", signup_path %></li> 
        <li class="divider"></li>

        <% end %>     
      
        <li><%= link_to "Help",    help_path %></li>
        <li class="divider"></li>
        <% if signed_in? %>
          <li class="has-dropdown">
            <a href="#">Account</a>
              <ul class="dropdown">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
          </li>
        <% else %>
        <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>

      <!-- Left Nav Section -->
    </section>
  </nav>
</div>
</header>